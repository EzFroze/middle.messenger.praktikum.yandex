<div class={{style.container}}>
  <div class={{style.avatar}}>
    {{{avatar}}}
  </div>
  <h4 class={{style.name}}>{{titleName}}</h4>
  <div class={{style.info}}>
    {{{email}}}
    <hr />
    
    {{{login}}}
    <hr />

    {{{name}}}
    <hr />

    {{{surname}}}
    <hr />

