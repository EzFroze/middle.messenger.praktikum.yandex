<div class={{style.floatingLabelGroup}}>
  <input
    type={{type}}
    id={{id}}
    class={{style.formControl}}
    autocomplete="off"
    placeholder={{placeholder}}

    {{#if autofocus}}
      autofocus="autofocus"
    {{/if}}

    {{#if required}}
      required="required"
    {{/if}}
  />
  {{#if label}}
    <label class={{style.floatingLabel}} for={{id}}>{{label}}</label>
  {{/if}}
</div>