.container {
  z-index: 999;
  position: absolute;
  top: 10px;
  left: 20px;
  display: flex;
  width: calc(100% - 40px);
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  padding: 10px;
  gap: 10px;
  border-radius: 10px;
}

.title {
  font-size: 24px;
  font-weight: 700;
}

.text {
  font-size: 16px;
  font-weight: 400;
}

.success {
  background-color: #23C552;
}

.danger {
  background-color: #F84F31;
}

.warning {
  background-color: #FAFAD2;
}
